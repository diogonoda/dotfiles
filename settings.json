{
    "workbench.colorTheme": "One Monokai",
    "workbench.startupEditor": "none",

    // #####################################
    // ########      Vim Mode      #########
    // #####################################
    "vim.leader": "\\",
    "vim.normalModeKeyBindingsNonRecursive": [
        // Tab Next
        {
            "before": ["<leader>", "l"],
            "after": ["g", "t"]
        },
        // Tab Previous
        {
            "before": ["<leader>", "h"],
            "after": ["g", "T"]
        },
        // Save file
        {
            "before": ["<leader>", "w"],
            "after": [":", "w", "<Enter>"]
        },
        // Close editor
        {
            "before": ["<leader>", "q"],
            "after": [":", "q", "<Enter>"]
        }
        // Add pry
        // Indent line/block
    ],
    "vim.insertModeKeyBindings": [
        // Exit insertMode
        {
            "before": ["k", "j"],
            "after": ["<Esc>"]
        },
        // Exit insertMode and save
        {
            "before": ["k", "j", "w"],
            "after": ["<Esc>", ":", "w", "<Enter>"]
        },
    ]
